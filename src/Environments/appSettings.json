{
  "appName": "Deviation Management System",
  "version": "1.0.0",
  "api": {
    "baseUrl": "http://localhost:3000/api",
    "timeout": 30000
  },
  "features": {
    "enableNotifications": true,
    "enableReporting": true,
    "enableExport": true
  },
  "ui": {
    "itemsPerPage": 25,
    "dateFormat": "MM/DD/YYYY",
    "timeFormat": "hh:mm A"
  },
  "logging": {
    "level": "debug",
    "enableConsole": true
  }
}

